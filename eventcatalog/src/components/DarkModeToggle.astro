---
// DarkModeToggle component - supports automatic OS preference detection and manual toggle
---

<button
  id="dark-mode-toggle"
  type="button"
  class="flex items-center justify-center w-8 h-8 rounded-full border-2 border-gray-200 hover:border-gray-300 dark:border-gray-600 dark:hover:border-gray-500 transition-colors bg-gray-100 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800"
  aria-label="Toggle dark mode"
  title="Toggle dark mode"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    id="sun-icon"
    class="hidden w-5 h-5 text-yellow-500"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      fill-rule="evenodd"
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
      clip-rule="evenodd"></path>
  </svg>
  <!-- Moon icon (shown in light mode) -->
  <svg id="moon-icon" class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
  </svg>
</button>

<script>
  function initDarkMode() {
    const toggle = document.getElementById('dark-mode-toggle');
    const sunIcon = document.getElementById('sun-icon');
    const moonIcon = document.getElementById('moon-icon');
    const html = document.documentElement;

    // Get stored preference or default to system preference
    function getThemePreference(): 'dark' | 'light' | 'system' {
      const stored = localStorage.getItem('theme');
      if (stored === 'dark' || stored === 'light') {
        return stored;
      }
      return 'system';
    }

    // Check if system prefers dark mode
    function systemPrefersDark(): boolean {
      return window.matchMedia('(prefers-color-scheme: dark)').matches;
    }

    // Determine if dark mode should be active
    function shouldBeDark(): boolean {
      const preference = getThemePreference();
      if (preference === 'system') {
        return systemPrefersDark();
      }
      return preference === 'dark';
    }

    // Update the UI to reflect current theme
    function updateUI() {
      const isDark = shouldBeDark();

      if (isDark) {
        html.classList.add('dark');
        sunIcon?.classList.remove('hidden');
        moonIcon?.classList.add('hidden');
      } else {
        html.classList.remove('dark');
        sunIcon?.classList.add('hidden');
        moonIcon?.classList.remove('hidden');
      }
    }

    // Toggle theme on button click
    function toggleTheme() {
      const currentPreference = getThemePreference();
      const currentlyDark = shouldBeDark();

      if (currentPreference === 'system') {
        // If system preference, switch to the opposite of current state
        localStorage.setItem('theme', currentlyDark ? 'light' : 'dark');
      } else {
        // If manual preference, toggle to opposite
        localStorage.setItem('theme', currentlyDark ? 'light' : 'dark');
      }

      updateUI();
    }

    // Listen for system preference changes
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', () => {
      // Only update if user hasn't set a manual preference
      if (getThemePreference() === 'system') {
        updateUI();
      }
    });

    // Set up click handler
    toggle?.addEventListener('click', toggleTheme);

    // Initialize on load
    updateUI();
  }

  // Run on initial load
  initDarkMode();

  // Re-run on Astro page transitions
  document.addEventListener('astro:page-load', initDarkMode);
</script>
